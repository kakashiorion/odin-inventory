doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(charset='utf-8')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div(class='container')
      div(class='left-panel')
        ul(class='menu')
          li
            a(href='/inventory') Home
          li
            hr
          each cat in categories
            li
              a(href='/inventory/items/'+cat._id) #{cat.name}
          li
            hr
          li
            a(href='/inventory/category/create') Create new category
          li
            a(href='/inventory/item/create') Create new item
      div(class='right-panel')
        block content