extends layout

block content
  h1(class='item-heading') #{title}: #{category.name}
  if items.length>0
    p Delete the following items before attempting to delete this category.
    div(class='item-list')
        each item in items
            div(class='item-card')
                img(src=item.image) 
                a(href='/inventory/item/'+item._id) #{item.name}
                div(class='item-info')
                    p Qty: #{item.qty} 
                    p Price: #{item.price}
  else
    p Do you really want to delete this category?
    form(method='POST' action='')
      div
        input(type='hidden', name='category', required='true', value=category._id )
      button(class='delete', type='submit') Delete